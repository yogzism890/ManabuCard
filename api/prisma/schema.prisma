generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  koleksi   Koleksi[]
  createdAt DateTime  @default(now())
}

model Koleksi {
  id        String   @id @default(uuid())
  nama      String
  deskripsi String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  kartu     Kartu[]
  createdAt DateTime @default(now())
}

model Kartu {
  id           String    @id @default(uuid())
  koleksi      Koleksi   @relation(fields: [koleksiId], references:[id])
  koleksiId    String
  front        String
  back         String
  difficulty   Int        @default(0)
  reviewDueAt  DateTime   @default(now())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  isDeleted      Boolean   @default(false)
  @@index([koleksiId, reviewDueAt]) 
}